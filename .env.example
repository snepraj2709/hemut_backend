# Application Settings
APP_NAME="Q&A Dashboard API"
ENV=development
DEBUG=True

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database Configuration

# For production (PostgreSQL/Neon)
# Example: postgresql://user:password@ep-host-1234.us-east-1.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/qa_dashboard

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS Settings
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Webhook Configuration
WEBHOOK_URL=https://webhook.site/your-unique-id

# AWS Configuration (for deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=qa-dashboard-uploads

# Redis Configuration (for production caching/sessions)
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# AI/RAG Configuration (Langchain)
OPENAI_API_KEY=sk-your-openai-api-key
LANGCHAIN_API_KEY=your-langchain-api-key
CHROMA_DB_PATH=./chroma_db

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30